<div class="row my-4">
    <div class="col">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h3>{{blogPost.title}}</h3>
                <em class="my-auto">{{blogPost.date_created}}</em>
            </div>
            <div class="card-body">
                <h5>{{blogPost.description}}</h5>
                <p>@{{blogPost.user.name}}</p>
            </div>
        </div>
    </div>
</div>
{{#each blogPost.comments}}
<div class="row my-4">
    <div class="col">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h3>{{user.name}}</h3>
                <em class="my-auto">{{date_added}}</em>
            </div>
            <div class="card-body">
                <h5>{{description}}</h5>
            </div>
        </div>
    </div>
</div>
{{/each}}